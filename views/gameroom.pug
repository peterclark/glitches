main.gameroom(v-if="playing")
  .container
    .row
      .col-xs-10
        h4 {{ game.genre }}
      .col-xs-2
        button.close(type='button', aria-label='Close', v-on:click='deleteGame', v-if='canControlGame')
          span(aria-hidden='true') &times;
        button.btn.btn-link.leave.game.text-muted(type='button', title='leave game', v-on:click='leaveGame', v-else)
          i.fa.fa-fw.fa-sign-out
    .row
      .col-xs-12
        hr
        
  .players
    .player(v-for="player in players")
      img.rounded(v-bind:src="player.photoURL")
  
  .gameboard
    .btn.btn-success.start.game(v-if='canControlGame')
      div Start Game
    .waiting(v-else)
      .text-muted waiting for host to start game...
